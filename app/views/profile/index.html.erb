<div class="max-w-7xl m-auto">
  <div class="bg-slate-100/50 rounded-xl p-16 text-gray-700">

    <h1 class="font-bold text-2xl mb-3">@<%= @user.username %></h1>
    <h1 class="font-semibold text-xl mb-3">Email: <%= @user.email %></h1>

    <%= link_to '<button class="bg-white hover:bg-gray-100 text-gray-700 font-semibold py-2 px-4 border border-gray-400 rounded shadow">Edit Profile</button>'.html_safe, edit_user_registration_path,class: "block py-3 pt-8" %>
  </div>
  <div class="bg-slate-100/50 rounded-xl p-16 mt-8 text-gray-700">
    <h2 class="font-semibold text-2xl mb-6">Your events</h2>
    <%= render 'event/shared/events', events: current_user.events %>
  </div>
</div>
