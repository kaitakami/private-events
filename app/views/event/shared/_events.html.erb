<% if events.length > 0 %>
        <div class="sm:grid sm:grid-cols-2 flex flex-col gap-8">
          <% events.each do |event| %>
            <div class="bg-slate-100 max-w-2xl p-8 flex flex-col gap-4">
              <div class="flex flex-col md:flex-row justify-between gap-4">
                <h3 class="text-lg rounded-md"><%= event.title %></h3>
                <p>Date: <%= event.date %></p>
              </div>
              <div>
                <p class="text-lg">Description:</p>
                <p><%= event.description %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <h3>Create your first event and it will show up here!</h3>
      <% end %>
